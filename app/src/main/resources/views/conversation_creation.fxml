<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox fx:id="vbox" prefHeight="293.0" prefWidth="260.0" spacing="10.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cmtp.controller.ConvCreationController">
   <children>
      <HBox spacing="6.0">
         <children>
            <TextField fx:id="recipientTextField" promptText="To" />
            <Button mnemonicParsing="false" onAction="#onAddRecipientCliked" text="add">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <TextArea prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
      <HBox spacing="6.0">
         <children>
            <ChoiceBox fx:id="pluginChoiceBox" prefWidth="150.0" />
            <Button mnemonicParsing="false" onAction="#onAddPluginCliked" text="add plugin" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
